@using Form114.Infrastructure
@model Form114.Models.SearchViewModel
@{
    ViewBag.Title = "Recherche Appartement de Vacances";
}

@section scripts{
<script src="~/Scripts/jquery-2.1.4.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
    <script src="http://harvesthq.github.io/chosen/chosen.jquery.js"></script>
    <script>
        $(function () {
            $("#slider-range").slider({
                range: true,
                min: 0,
                max: 1000,
                values: [100, 1000],
                slide: function (event, ui) {
                    $("#amount").val("€" + ui.values[0] + " - €" + ui.values[1]);
                    $("#prixmini").val(ui.values[0]);
                    $("#prixmaxi").val(ui.values[1]);
                }
            });
            $("#prixmini").val($("#slider-range").slider("values", 0));
            $("#prixmaxi").val($("#slider-range").slider("values", 1));
            //$("#amount").val("€" + $("#prixmini") +
            //  " - €" + $("#prixmaxi"));
            $("#amount").val("€" + $("#slider-range").slider("values", 0) +
          " - €" + $("#slider-range").slider("values", 1));
        });
    </script>

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
}
<h2>Search</h2>


@using (Html.BeginForm("Index", "Search")){
    using (@Html.FieldsetHelper("Prix du Logement"))
    {
        @Html.Slider("slider-range")
    }

}
<div class="col-lg-4"></div>


